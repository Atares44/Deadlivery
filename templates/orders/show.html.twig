{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="h1 formTitle">{{ "Recap de la commande " ~ order.orderRef }}</h1>
    <table class="table table-dark tabCustom">
        <tr>
            <th>
                Référence
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderRef }}
            </td>
        </tr>
        <tr>
            <th>
                Client
            </th>
        </tr>
        <tr>
            <td>
                {{ order.client.user.userFirstName }} {{ order.client.user.userSurname }}
            </td>
        </tr>
        <tr>
            <th>
                Service
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderService.serviceName }}
            </td>
        </tr>
        <tr>
            <th>
                Produit
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderProducts.productName }}
            </td>
        </tr>
        <tr>
            <th>
                Montant
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderPrice | format_currency('EUR') }}
            </td>
        </tr>
        <tr>
            <th>
                Date de commande
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderDate | date('d/m/Y') }}
            </td>
        </tr>
        <tr>
            <th>
                Status
            </th>
        </tr>
        <tr>
            <td>
                {{ order.orderStatus }}
            </td>
        </tr>
    </table>
    <a href="{{ path('app_orders_cancellation', {'id': order.id}) }}"><button class="btn btn-primary">Annuler</button></a>
{% endblock %}

